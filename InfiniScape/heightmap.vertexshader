#version 330 core


// Input vertex data, different for all executions of this shader.
layout(location = 0) in vec3 position;
layout(location = 1) in vec2 vertexUV;

uniform mat4 MVP;

out vec2 UV;
out float height;

void main(){

    gl_Position = MVP * vec4(position, 1);
	gl_PointSize = 5.0;

	UV = vertexUV;
	height = position.y;
}
